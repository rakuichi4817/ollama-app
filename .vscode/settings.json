{
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
    },
    "flake8.args": [
        "--max-line-length=88",
        "--ignore=E203,W503,W504"
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
    "python.analysis.typeCheckingMode": "basic",
}